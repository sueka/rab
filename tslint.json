{
  "extends": ["tslint:recommended", "tslint-react"],
  "rules": {
    /* Coding Style Rules */
    "semicolon": [true, "never"],
    "quotemark": [true, "single", "jsx-double"],
    "trailing-comma": [
      true,
      {
        "singleline": "never",
        "multiline": {
          "arrays": "always",
          "objects": "always",
          "imports": "always",
          "exports": "always",
          "functions": "never",    // Keep it compatible with TypeScript 2.6-
          "typeLiterals": "never"  // Keep it compatible with TypeScript 2.6-
        },
        "esSpecCompliant": true
      }
    ],
    "no-submodule-imports": [true, "redux-saga/effects"],

    /* Ordering Rules */
    "member-ordering": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,

    /* Bad Rules */
    "interface-name": false,
    "interface-over-type-literal": false,
    "max-line-length": false
  }
}
